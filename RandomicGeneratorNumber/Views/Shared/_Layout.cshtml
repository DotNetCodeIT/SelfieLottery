<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="DotNetCode">

    <title>Estrazione Premi</title>

    <!-- Bootstrap Core CSS -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <!-- Theme CSS -->
    <link href="~/Content/freelancer.css" rel="stylesheet">
    <!-- Custom Fonts -->
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Lato:400,700,400italic,700italic" rel="stylesheet" type="text/css">

    <link rel="stylesheet" href="~/Content/jquery.slotmachine.css" type="text/css" media="screen" />
    <link rel="stylesheet" href="~/Content/jquery.modal.min.css" type="text/css" media="screen" />
    <link rel="stylesheet" href="~/Content/style.css" type="text/css" media="screen" />
</head>

<body id="page-top" class="index">

    <!-- Navigation -->
    <nav id="mainNav" class="navbar navbar-default navbar-fixed-top navbar-custom">
        <div class="container">
            <div class="navbar-header">
                <a href="#page-top"><img src="~/img/LogoDotNetCode2016_500x167.png" alt="" height="60"></a>
            </div>
        </div>
        <!-- /.container-fluid -->
    </nav>

    <!-- Header -->
    <header>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="intro-text">
                        <span class="name">@ViewBag.Title</span>
                        <hr class="star-light">
                        <span class="skills">@ViewBag.SubTitle</span>
                    </div>
                </div>
            </div>
            @if (ViewBag.Page == "Index")
            {
                <div class="row">
                    <div class="col-lg-12 text-center">
                        <p>Registratevi al link sottostante per partecipare all'estrazione.</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12 text-center">
                        <a href="~/registrazione" class="btn-default btn-lg">Registrazione</a>
                       
                        @*<a href="~/Home/Registrazione" style="color:white">http://Home/Registrazione</a>*@
                    </div>
                </div>
                <div class="row" style="text-align:center">
                    <div class="col-lg-12 text-center">
                        @*<img src="~/img/Logo2016Trasp.png" alt="" width="150" >*@
                    </div>
                </div>
            }
            @if (ViewBag.Page == "Estrazione")
            {

                <div class="row">
                    <div class="col-lg-12 text-center">
                        <a class="btn btn-default btn-lg" href="#ex1" rel="modal:open" id="pronti">Pronti?</a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <label for="numeroPartecipanti">Numero Partecipanti:</label>
                        <label id="numeroPartecipanti">0</label>
                    </div>
                </div>
            }

        </div>
    </header>

    <!-- Header -->
    <div class="container body-content">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer class="text-center">
        <!--
        <div class="footer-above">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 text-center">
                        <img src="~/img/Logo2016Trasp.png" alt="" width="150" >
                    </div>
                </div>
            </div>
        </div>
                                    -->
        <div class="footer-below">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        Copyright &copy; DotNetCode 2017
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <!-- jQuery -->
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="~/Scripts/bootstrap.min.js"></script>

    <!-- Plugin JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js"></script>
    <script src="~/Scripts/jquery.modal.min.js" type="text/javascript" charset="utf-8"></script>

    <!-- Theme JavaScript -->
    <script src="~/Scripts/freelancer.min.js"></script>

    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-2.2.1.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
