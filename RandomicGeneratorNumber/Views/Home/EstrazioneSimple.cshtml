@{ 
    Layout = "~/Views/Shared/_LayoutSimple.cshtml";
}
<section id="estrazione">
   <div class="row">
        <div class="col-lg-12 text-center">
            &nbsp;
        </div>
    </div>

    <div class="row">
        <table style="height: 100px;" class="col-md-offset-1">
            <tbody>
                <tr>
                    <td>
                        <label for="numeroPartecipanti">Numero Partecipanti:</label>
                        <label id="numeroPartecipanti">0</label>
                    </td>
                    <td>
                        &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;
                    </td>
                    <td>
                        <a class="btn btn-success btn-md" href="#ex1" id="pronti">Pronti?</a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="row">
        <div>
            &nbsp;
        </div>
    </div>

    <div id="ex1" class="modal" style="display:none">
        <div style="text-align: center" id="p-0">
            <div class="row">
                <div>
                    <strong>Chi sarà il vincitore?</strong>
                </div>
            </div>
            <div class="row">
                <div>
                    &nbsp;
                </div>
            </div>
            <div class="row">
                <div style="margin: auto; text-align:center">
                    <div id="machine">
                        <div id="firstElement">
                            <strong>Premi Estrai!</strong>
                        </div>
                    </div>
                    <div>
                        <div class="btn-group btn-group-justified btn-group-machine" role="group">
                            <div id="randomizeButton" type="button" class="btn btn-danger btn-lg">Estrai!</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
    </div>

    <div class="row" id="partecipanti" style="margin:10px">

    </div>

    <div id="partecipantiModal">

    </div>

</section>

@section scripts {
    <script type="text/javascript" src="~/Scripts/jquery.slotmachine.js"></script>
    <script src="~/Scripts/estrazione.js?v=@ViewContext.Controller.GetType().Assembly.GetName().Version"></script>

   <script>
    $(document).ready(function () {

        $('a[href="#ex1"]').click(function (event) {
            event.preventDefault();
            $(this).modal({
                showClose: false
            });
        });

        var machine = $("#machine").slotMachine({
            active: 0,
            delay: 500
        });

        $("#randomizeButton").click(function () {
            machine.destroy();
            machine = $("#machine").slotMachine({
                active: 0,
                delay: 500,
                randomize: function () {
                    var numCon = document.querySelectorAll('#partecipanti .estrazione-item').length;
                    var x = Math.floor((Math.random() * numCon) + 1);
                    return x;
                }
            });

            var y = Math.floor((Math.random() * 10000) + 1);
            machine.shuffle(5, onComplete);
            //setTimeout(function () { machine.stop(); }, y);
        })


        function onComplete(active) {
            switch (this.element[0].id) {
                case 'machine':
                    $("a[href='#ex1-" + this.active + "']").click()
                    break;
            }
        }

    });

</script>
}

