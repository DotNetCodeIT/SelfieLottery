@{
    ViewBag.Title = "Registrazione";
}
@if (ViewBag.Ok == true)
{
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Registrazione Completata!</h3>
        </div>
    </div>
}
else
{
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Registrazione</h3>
        </div>

        <form role="form" method="post" enctype="multipart/form-data">
            <div class="box-body">
                <input type="hidden" name="id" value="@Guid.NewGuid().ToString()" />
                <div class="form-group">
                    <label for="nome">Nome</label>
                    <input type="text" class="form-control" id="nome" name="Nome" placeholder="Nome" required>
                </div>
                <div class="form-group">
                    <label for="cognome">Cognome</label>
                    <input type="text" class="form-control" id="cognome" name="Cognome" placeholder="Cognome">
                </div>
                <div class="form-group">
                    <label for="foto">Selfie</label>
                    <input type="file" id="foto" name="Foto" required>

                    <p class="help-block">Scatta un selfie col cellulare</p>
                </div>

            </div>
            <div class="box-footer">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </form>
    </div>
}
